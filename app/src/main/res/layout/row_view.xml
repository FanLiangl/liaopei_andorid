<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="6dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/profile_item_backgroud">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivLeftIcon"
            android:layout_marginLeft="8dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLeft"
            tools:text="年龄"
            android:textColor="@color/colorBlack100"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"/>

        <com.zm.liaopei.widgets.AutoRightEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRight"
            android:textSize="13sp"
            android:textColor="@color/colorBlack30"
            android:textColorHint="@color/colorBlack30"
            android:gravity="end"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRight"
            android:textSize="13sp"
            android:visibility="visible"
            android:textColor="@color/colorBlack30"
            android:gravity="end"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"/>

        <com.zm.liaopei.widgets.flexboxFlowLayout.TagFlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagLayout"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:flexDirection="row"
            app:flexWrap="wrap"/>
    </LinearLayout>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/ivRightArrow"
        android:src="@mipmap/ic_moro"/>

</LinearLayout>